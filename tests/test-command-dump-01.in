# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

. $testdir/defs || exit 1

# Always check --help and --version
$DNT dump --help    || exit 1
$DNT dump --version || exit 1

# Then perform the command related check
$DNT init || exit 1

$DNT add -t "test1"  || exit 1
$DNT add -t "test2"  || exit 1
$DNT add -t "test3"  || exit 1

$DNT add -t "test11" -p 1 || exit 1
$DNT add -t "test21" -p 2 || exit 1
$DNT add -t "test31" -p 3 || exit 1

$DNT dump                                   || exit 1
$DNT dump --output /dev/stdout              || exit 1
$DNT dump --output /dev/stderr              || exit 1
$DNT dump --output test.dump                || exit 1
$DNT dump --width=0                         || exit 1
$DNT dump --width=80                        || exit 1
$DNT dump            --format="%t"          || exit 1
$DNT dump            --format="%p"          || exit 1
$DNT dump            --format="%s"          || exit 1
$DNT dump            --format="%e"          || exit 1
$DNT dump            --format="%t %p %s %e" || exit 1
$DNT dump --width=0  --format="%p %t %e %s" || exit 1
$DNT dump --width=80 --format="%p %t %e %s" || exit 1

exit 0
