required="diff sort"

. $testdir/defs || exit 1

CFG_FILE="test.cfg"

rm -f $CFG_FILE 2>/dev/null

CFG_FLAGS="--configuration=${CFG_FILE}"

# Does config --show work correctly ?
$DNT_NOFLAGS $CFG_FLAGS config --show || exit 1

# Start with something more complex

cat > $CFG_FILE << EOF
dnt.verbose       = True
dnt.database      = alfa
dnt.colors        = True
dnt.warning       = False
dnt.debug         = False
dnt.configuration = beta
EOF

$DNT_NOFLAGS $CFG_FLAGS config --show > OUT1.txt || exit 1

cat > OUT2.txt << EOF
dnt.verbose       = True
dnt.database      = alfa
dnt.colors        = True
dnt.warning       = False
dnt.debug         = False
dnt.configuration = beta
EOF

cat OUT1.txt | sort > OUT11.txt
cat OUT2.txt | sort > OUT22.txt

diff OUT11.txt OUT22.txt || exit 1

exit 0
