required=""

. $testdir/defs || exit 1

COMMAND="show"

# Creating test DB
$DNT_FLAGS clean || exit 1
$DNT_FLAGS init  || exit 1
$DNT_FLAGS add -t "alfa" || exit 1

# Testing indentation - phase 1
EXPECTED=""

OUTPUT="`$DNT_NOFLAGS $COMMAND -l '' -I '>' -U ''`"
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
  exit 1
fi

# Testing unindentation - phase 1
EXPECTED=""

OUTPUT="`$DNT_NOFLAGS $COMMAND -l '' -I '' -U '<'`"
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
  exit 1
fi

# Testing indentation - phase 2
$DNT_FLAGS add -t "beta" || exit 1
$DNT_FLAGS add -i 1 -t "a" || exit 1
$DNT_FLAGS add -i 1 -t "b" || exit 1
$DNT_FLAGS add -i 2 -t "a" || exit 1

EXPECTED=">>"

OUTPUT="`$DNT_NOFLAGS $COMMAND -l '' -I '>' -U ''`"
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
  exit 1
fi

# Testing unindentation - phase 3
EXPECTED="<<"

OUTPUT="`$DNT_NOFLAGS $COMMAND -l '' -I '' -U '<'`"
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
  exit 1
fi

# Testing indentation and unindentation together
EXPECTED="><><"

OUTPUT="`$DNT_NOFLAGS $COMMAND -l '' -I '>' -U '<'`"
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
  exit 1
fi

exit 0
