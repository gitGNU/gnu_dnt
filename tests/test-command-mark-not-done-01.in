required="diff"

. $testdir/defs || exit 1

# Fill the tree
$DNT_FLAGS clean         || exit 1
$DNT_FLAGS init          || exit 1
$DNT_FLAGS add -t "alfa" || exit 1
$DNT_FLAGS add -t "beta" || exit 1

# Mark node 0.1 and 0.2 as done
$DNT_FLAGS mark --status=done -i 0.1 || exit 1
$DNT_FLAGS mark --status=done -i 0.2 || exit 1

# Remark only node 0.1 as not-done and check'em all
$DNT_FLAGS mark --status=not-done -i 0.1 || exit 1

rm -f test1.log test2.log || exit 1

$DNT_FLAGS show -F "~ done" -l "%t" -I "" -U "" -L "" -o test1.log || exit 1
cat > test2.log <<EOF
alfa
EOF

diff test1.log test2.log || exit 1

rm -f test3.log test4.log || exit 1

$DNT_FLAGS show -F done -l "%t" -I "" -U "" -L "" -o test3.log || exit 1
cat > test4.log <<EOF
beta
EOF

diff test3.log test4.log || exit 1

exit 0
