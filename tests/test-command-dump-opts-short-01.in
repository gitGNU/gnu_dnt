# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

COMMAND="dump"

# Creating test DB
rm -f test.db
$DNT --database test.db init || exit 1
$DNT --database test.db add -t "alfa" || exit 1

# Testing "-l" option
$DNT_NOFLAGS dump -l "%t" || exit 1

# Testing "-F" option
$DNT --database test.db done -i "1" || exit 1
$DNT_NOFLAGS $COMMAND -F "done" -l "%t" || exit 1

# Testing "-w" option
$DNT_NOFLAGS $COMMAND -l "%t" -w 2 || exit 1

# Testing "-i" option
$DNT_NOFLAGS $COMMAND -l "%t" -i "1. " || exit 1

# Testing "-u" option
$DNT_NOFLAGS $COMMAND -l "%t" -u "" || exit 1

rm -f test.db

exit 0
