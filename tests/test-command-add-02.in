# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

# Always check --help and --version
$DNT_FLAGS add --help    || exit 1
$DNT_FLAGS add --version || exit 1

# Then perform the command related check
$DNT_FLAGS clean || exit 1
$DNT_FLAGS init  || exit 1

$DNT_FLAGS add -t "test1" -p verylow  || exit 1
$DNT_FLAGS add -t "test1" -p low      || exit 1
$DNT_FLAGS add -t "test1" -p medium   || exit 1
$DNT_FLAGS add -t "test2" -p high     || exit 1
$DNT_FLAGS add -t "test3" -p veryhigh || exit 1

exit 0
