# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

COMMAND="show"

# Creating test DB
$DNT_FLAGS clean || exit 1
$DNT_FLAGS init  || exit 1

# Filling DB
$DNT_FLAGS add -t "alfa" || exit 1
$DNT_FLAGS add -t "beta" || exit 1
$DNT_FLAGS add -t "a" -i "1" || exit 1
$DNT_FLAGS add -t "b" -i "2" || exit 1

# Testing "-i" option
$DNT_NOFLAGS $COMMAND -i "2" || exit 1

# Testing "-w" option
$DNT_NOFLAGS $COMMAND -w "16" || exit 1

# Testing "-F" option
$DNT_FLAGS $COMMAND -F "done"     || exit 1
$DNT_FLAGS $COMMAND -F "not-done" || exit 1
$DNT_FLAGS $COMMAND -F "all"      || exit 1

# Testing "-o" option
$DNT_FLAGS $COMMAND -o "test1.log" || exit 1

# Testing formatting related options
$DNT_FLAGS $COMMAND -l "%t"        || exit 1
$DNT_FLAGS $COMMAND -l "%t" -i "x" || exit 1
$DNT_FLAGS $COMMAND -l "%t" -u "y" || exit 1

exit 0
