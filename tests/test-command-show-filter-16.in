required=''

. $testdir/defs || exit 1

COMMAND="show"

# Creating test DB
$DNT_FLAGS clean                                || exit 1
$DNT_FLAGS init -n "test"                       || exit 1

$DNT_FLAGS add -t "a"  -s "2006-01-01 00:00:00"         \
                       -e "2009-01-01 00:00:00" || exit 1

# Testing time matching robustness
EXPECTED="a"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F 'start == \"2006-01-01      \"'`"      \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED="a"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F 'start == \"       2006-01-01\"'`"     \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED="a"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U ''  \
                      -F 'end == \"2009-01-01     00:00:00\"'`"  \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED="a"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F 'end == \"    2009-01-01     00:00:00  \
                         \"'`"                                  \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED="a"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U ''    \
                      -F 'end == \"    2009-01-01     00:00:00  \" \
                          and                                      \
                          start == \"    2006-01-01       \"       \
                          '`"                                      \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

exit 0
