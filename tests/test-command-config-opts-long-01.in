# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

:> test.cfg || exit 1

COMMAND="config"

# Testing "--show" option
$DNT_NOFLAGS --configuration test.cfg $COMMAND --show || exit 1

# Testing "--get" option
VALUE="`$DNT_NOFLAGS --configuration test.cfg \
                     $COMMAND --get --key dnt.debug`"

if test "x${VALUE}" = "x"; then
  exit 1
fi

# Testing "--set" option
NEW_VALUE=""
if test "x${VALUE}" = "xFalse"; then
  NEW_VALUE="True"
else
  NEW_VALUE="False"
fi

$DNT_NOFLAGS --configuration test.cfg \
             $COMMAND --set --key dnt.debug --value $NEW_VALUE || exit 1

TEST_VALUE="`$DNT_NOFLAGS --configuration \
                          test.cfg $COMMAND --get --key dnt.debug`"
if test ! "x${TEST_VALUE}" = "x${NEW_VALUE}"; then
  exit 1
fi

$DNT_NOFLAGS --configuration test.cfg \
             $COMMAND --set --key dnt.debug --value $VALUE || exit 1

exit 0
