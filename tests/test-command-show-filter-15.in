required=''

. $testdir/defs || exit 1

COMMAND="show"

# Creating test DB
$DNT_FLAGS clean                                || exit 1
$DNT_FLAGS init -n "test"                       || exit 1

$DNT_FLAGS add -t "a"  -s "2006-01-01 00:00:00"         \
                       -e "2009-01-01 00:00:00" || exit 1
$DNT_FLAGS add -t "a1" -s "2007-01-01 00:00:00"         \
                       -e "2008-01-01 00:00:00"         \
                       -i 1                     || exit 1
$DNT_FLAGS add -t "b"  -s "2008-01-10 00:00:00"         \
                       -e "2008-01-11 00:00:00" || exit 1
$DNT_FLAGS add -t "b1" -s "2008-01-10 00:00:00"         \
                       -e "2008-01-10 00:20:00"         \
                       -i 2                     || exit 1

# Testing start/end time filtering
EXPECTED="...
b1"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F '(start == \"2008-01-10\") and         \
                          (end < \"2008-01-11\")'`"             \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED="...
b1"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F '(start == \"2008-01-10\") and         \
                          (end < \"2008-01-11\")'`"             \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED=""
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F '(start != \"2008-01-10\") and         \
                          (start != \"2006-01-01\") and         \
                          (end < \"2008-01-01\")'`"             \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

EXPECTED="...
a1"
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND -I '' -L '' -l '%t' -U '' \
                      -F '(start != \"2008-01-10\") and         \
                          (start != \"2006-01-01\") and         \
                          (not (end < \"2008-01-01\"))'`"       \
                      || exit 1
if test ! "x${OUTPUT}" = "x${EXPECTED}"; then
   exit 1
fi

exit 0
