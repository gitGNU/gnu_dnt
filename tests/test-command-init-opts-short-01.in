# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

COMMAND="init"

# Creating test DB
rm -f test.db
$DNT --database test.db $COMMAND || exit 1

# Testing "-f" option
$DNT --database test.db $COMMAND -f || exit 1
rm -f test.db

# Testing "-n" option
$DNT --database test.db $COMMAND -n "test_node" || exit 1

# Testing "-f" option on "-n" option
$DNT --database test.db $COMMAND -n "test_node" -f || exit 1

exit 0
