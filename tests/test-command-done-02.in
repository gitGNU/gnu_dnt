# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required="diff"

. $testdir/defs || exit 1

# Fill the tree
$DNT_FLAGS clean         || exit 1
$DNT_FLAGS init          || exit 1
$DNT_FLAGS add -t "alfa" || exit 1
$DNT_FLAGS add -t "beta" || exit 1

# Mark node 0.1 and 0.2 as done
$DNT_FLAGS done --id 0.1 || exit 1
$DNT_FLAGS done --id 0.2 || exit 1

# Checking the result
: >test.exp || exit 1
: >test.out || exit 1

cat >test.exp <<EOF
EOF

$DNT_NOFLAGS dump -F not-done -l "%t" >test.out

diff test.out test.exp || exit 1

cat >test.exp <<EOF
alfa
beta
EOF

$DNT_NOFLAGS dump -F done -l "%t" >test.out

diff test.out test.exp || exit 1

exit 0
