# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

COMMAND="show"

# Creating test DB
rm -f test.db
$DNT --database test.db init || exit 1

# Filling DB
$DNT --database test.db add --text="alfa" || exit 1
$DNT --database test.db add --text="beta" || exit 1
$DNT --database test.db add --text="a" --parent-id="2" || exit 1

# Testing "--all" option
$DNT_NOFLAGS $COMMAND --all || exit 1

# Testing "--id" option
$DNT_NOFLAGS $COMMAND --id="2" || exit 1

# Testing "--width" option
$DNT_NOFLAGS $COMMAND --all --width="16" || exit 1

# Testing "--filter" option
$DNT --database test.db done --id="2.1" || exit 1
$DNT_NOFLAGS $COMMAND --all --filter="done"   || exit 1

# Testing "--output" option
$DNT --database test.db $COMMAND --output="test1.log" || exit 1

rm -f test1.log

rm -f test.db

exit 0
