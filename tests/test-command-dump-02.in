# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

COMMAND="dump"

# Creating test DB
$DNT_FLAGS clean             || exit 1
$DNT_FLAGS init              || exit 1
$DNT_FLAGS add --text="alfa" || exit 1

# Testing "--line-format" option
OUTPUT="`$DNT_NOFLAGS --mono $COMMAND --line-format=\"%t\"`"
if test ! "x${OUTPUT}" = "xalfa"; then
  exit 1
fi

OUTPUT="`$DNT_NOFLAGS --mono $COMMAND --line-format=\"%s\"`"
if test "x${OUTPUT}" = "x"; then
  exit 1
fi

OUTPUT="`$DNT_NOFLAGS --mono $COMMAND --line-format=\"%e\"`"
if test ! "x${OUTPUT}" = "xunknown"; then
  exit 1
fi

OUTPUT="`$DNT_NOFLAGS --mono $COMMAND --line-format=\"%p\"`"
if test ! "x${OUTPUT}" = "xmedium"; then
  exit 1
fi

exit 0
