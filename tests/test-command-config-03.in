required="diff sort"

. $testdir/defs || exit 1

CFG_FILE="test.cfg"

rm -f $CFG_FILE 2>/dev/null

CFG_FLAGS="--configuration=${CFG_FILE}"

$DNT_NOFLAGS $CFG_FLAGS config --set --key dnt.warning  --value False || exit 1
$DNT_NOFLAGS $CFG_FLAGS config --set --key dnt.verbose  --value True  || exit 1
$DNT_NOFLAGS $CFG_FLAGS config --set --key dnt.colors   --value False || exit 1
$DNT_NOFLAGS $CFG_FLAGS config --set --key dnt.debug    --value False || exit 1

$DNT_NOFLAGS $CFG_FLAGS config --show > OUT1.txt || exit 1

cat > OUT2.txt << EOF
dnt.verbose  = True
dnt.colors   = False
dnt.warning  = False
dnt.debug    = False
EOF

# We must exclue overridden values (defs overrides both database and colors)
cat OUT1.txt | sort | grep -v "dnt.database" | grep -v "dnt.colors" \
    > OUT11.txt || exit 1
cat OUT2.txt | sort | grep -v "dnt.database" | grep -v "dnt.colors" \
    > OUT22.txt || exit 1

diff --ignore-all-space OUT11.txt OUT22.txt || exit 1

exit 0
