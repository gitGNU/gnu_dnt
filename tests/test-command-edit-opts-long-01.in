# Test to ensure that the test environment has a good set-up
# Report from Francesco Salvestrini

required=""

. $testdir/defs || exit 1

COMMAND="edit"

# Creating test DB
rm -f test.db
$DNT --database test.db init || exit 1
$DNT --database test.db add --text="alfa"                 \
                            --priority="low"              \
                            --start="2009-02-26 15:05:00" \
                            --end="2009-02-28 15:05:00" || exit 1

# Testing "--text" option
$DNT --database test.db $COMMAND --id="1" --text="beta" || exit 1

# Testing "--priority" option
$DNT --database test.db $COMMAND --id="1" \
     --priority="high" || exit 1

# Testing "--start" option
$DNT --database test.db $COMMAND --id="1" \
     --start="2009-02-26 15:06:00" || exit 1

# Testing "--end" option
$DNT --database test.db $COMMAND --id="1" \
     --end="2009-02-28 15:06:00" || exit 1

rm -f test.db

exit 0
